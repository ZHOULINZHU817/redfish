
.auto {
  width: 90%;
  margin: 0 5%;
}
.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.flex-item1 {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.flex-item2 {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
}
.align--center {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.justify--center {
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.f-s22 {
  font-size: 22rpx;
}
.f-s23 {
  font-size: 23rpx;
}
.f-s24 {
  font-size: 24rpx;
}
.f-s26 {
  font-size: 26rpx;
}
.f-s28 {
  font-size: 28rpx;
}
.f-s30 {
  font-size: 30rpx;
}
.userinfo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99999;
}
.userinfo-title {
  background: #fff;
  padding: 0 30rpx;
  position: absolute;
  width: calc(100% - 60rpx);
  bottom: 0;
  left: 0;
}
.userinfo-title-sq {
  font-size: 30rpx;
  padding: 20rpx 0 20rpx 0;
}
.userinfo-title-get {
  padding-bottom: 40rpx;
  font-size: 36rpx;
}
.userinfo-title-img {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 15rpx 0;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 24rpx;
}
.userinfo-title-img ._img {
  width: 75rpx;
  height: 75rpx;
  -webkit-border-radius: 5rpx;
          border-radius: 5rpx;
  margin-right: 10rpx;
}
.userinfo-title-img ._h3 {
  color: #333;
  margin-bottom: 5rpx;
}
.userinfo-title-img ._h5 {
  color: #999;
}
.userinfo-title-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 70rpx 0;
}
.userinfo-title-btn button {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: #333;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
}
.userinfo-title-btn button:nth-child(1) {
  margin-right: 20rpx;
  background: #999;
}
.userinfo-title-btn button:last-child {
  background: #ff2d4a;
  color: #fff;
}

