.promotion .tab {
  width: 420rpx;
  margin: 20rpx auto;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  border: 1rpx solid #07913b;
  color: #07913b;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
}
.promotion .tab ._li:first-child {
  border-right: 1rpx solid #07913b;
}
.promotion .tab ._li.active {
  background: #07913b;
  color: #fff;
}
.promotion .tab-item .seat {
  height: 20rpx;
  background: #f5f5f5;
}
.promotion .tab-item .tab-footer {
  margin: 20rpx 0;
}
.promotion .tab-item .tab-footer ._h4 {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
  width: 500rpx;
}
.promotion .tab-item .tab-footer .tab-btn {
  margin-left: 20rpx;
}
.promotion .tab-item .tab-footer .tab-btn button {
  width: 160rpx;
  height: 66rpx;
  -webkit-border-radius: 52rpx;
          border-radius: 52rpx;
  border: 2rpx solid #07913b;
  color: #07913b;
  line-height: 66rpx;
  text-align: center;
  font-size: 28rpx;
  background: none;
}
.promotion .tab-item .img {
  width: 700rpx;
  height: 320rpx;
}
.promotion .tab-item .img-goods {
  margin-right: 20rpx;
}
.promotion .tab-item .img-goods ._img {
  width: 180rpx;
  height: 180rpx;
}
.promotion .tab-item .tab-li {
  border-bottom: 1rpx solid #e0e0e0;
  padding: 20rpx;
}
.promotion .tab-item .goods-box ._h3 {
  height: 130rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.promotion .tab-item .goods-box ._span {
  text-decoration: line-through;
}
.promotion .tab-item .share {
  margin-left: 10rpx;
}
.promotion .tab-item .share button {
  border: 0px solid transparent;
  padding: 0 10rpx;
  background: none;
}
.promotion .tab-item .share button::after {
  border: none;
}

